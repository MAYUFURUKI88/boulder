<!DOCTYPE html>
<html>
  <head>
    <title>Boulder</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
  <div class="header">
  <nav class="navbar navbar-expand-lg navbar-light" style="background-color:#1e90ff;">
  <a class="navbar-brand" href="/">Boulder</a>
  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
  </button>

  <div class="collapse navbar-collapse" id="navbarSupportedContent">
  
  <% if user_signed_in? %>
  <ul class="navbar-nav mr-auto">
      <li class="nav-item active">
        <a class="nav-link"><%=link_to "ログアウト", destroy_user_session_path,method: :delete, class: "top-button"%><span class="sr-only">(current)</span></a>
      </li>
      <li class="nav-item active">
        <a class="nav-link" href="#"><%=link_to current_user.nickname, root_path, class: "top-button"%><span class="sr-only">(current)</span></a>
      </li>
    </ul>

  <% else %>
    <ul class="navbar-nav mr-auto">
      <li class="nav-item active">
        <a class="nav-link"><%=link_to "ログイン", new_user_session_path, class: "top-button"%><span class="sr-only">(current)</span></a>
      </li>
      <li class="nav-item active">
        <a class="nav-link" href="#"><%=link_to "新規登録", new_user_registration_path, class: "top-button"%><span class="sr-only">(current)</span></a>
      </li>
    </ul>
    <% end %>

    <form class="form-inline my-2 my-lg-0">
      <input class="form-control mr-sm-2" type="search" placeholder="店名から検索" aria-label="Search">
      <button class="btn btn-outline-success my-2 my-sm-0" type="submit">検索</button>
    </form>
  </div>
</nav>
</div>
    <%= yield %>
  </body>
</html>
